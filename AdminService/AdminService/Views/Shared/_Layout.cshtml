<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Service</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #0d47a1;
        }

            .navbar a {
                color: white !important;
            }

        .hero-section {
            background: #0d47a1;
            color: white;
            text-align: center;
            padding: 20px 0;
            font-size: 24px;
            font-weight: bold;
        }

        .container {
            margin-top: 20px;
        }

        .card {
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .footer {
            background-color: #0d47a1;
            color: white;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        
    </nav>

    @* <!-- Hero Section --> *@
    <div class="hero-section">
    <h1>@ViewData["Title"]</h1> 
    </div>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Virtual Shopping Mall | All Rights Reserved.</p>
    </footer>

    <script src="~/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
</html>
